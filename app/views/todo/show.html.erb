 <% @priority = 'low' %>
 <h1>
      <%= @todo_title_main %>
    </h1>

    <div>
      <input type="checkbox">
      <%
        if @todo_pomodoro_estimate  > 3
            @priority = "high"
        elsif @todo_pomodoro_estimate == 2 || @todo_pomodoro_estimate == 3
            @priority = "medium"
        end
          %>
          
      <h2 class="<%= @priority%> <%=@strike %>"><%= params[:id]%>. <%= @todo_task_title %></h2>
      <span><%= @todo_pomodoro_estimate %> Pomodoros</span>
      <h3>Description</h3>
      <p><%= @todo_description%></p>
      <button id = "edit-todo-button"> <a href="/todo/edit/<%= @todo.id %>" class="button edit-todo-button">Edit</a></button>
      <a href="#" id="delete-todo-button">Delete</a>
      <a href="/todo/index.html" class="simple-link">Go back...</a>
    </div>